            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.szxb.swept_pay.MainActivity" >
        </activity>
        <activity android:name="com.szxb.swept_pay.RecordActivity" >
        </activity>
    </application>

</manifest>