<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/pay_code"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay"
            android:layout_alignLeft="@+id/refund"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="支付码"
            android:textSize="17sp" >
        </EditText>

        <EditText
            android:id="@+id/out_trade_no"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay"
            android:layout_alignLeft="@+id/refund"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="商户订单号"
            android:textSize="17sp" >
        </EditText>

        <EditText
            android:id="@+id/transaction_id"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/pay"
            android:layout_alignLeft="@+id/refund"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:ems="10"
            android:hint="威富通订单号"
            android:textSize="17sp" >
        </EditText>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F0F0F0"
        android:gravity="center" >

        <Button
            android:id="@+id/pay"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:onClick="click"
            android:text="支付"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/refund"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/pay"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:onClick="click"
            android:text="退款"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/gral"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_toRightOf="@id/pay"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />

        <Button
            android:id="@+id/set"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_below="@id/gral"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/refund"
            android:textColor="#FFFFFF"
            android:textSize="24dp" />
    </RelativeLayout>

</LinearLayout>